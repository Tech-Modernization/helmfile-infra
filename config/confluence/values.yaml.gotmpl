ingress:
  enabled: true
  hosts:
    - confluence.{{.Environment.Name}}.{{ .Environment.Values.helm.domain }}
  annotations:
    kubernetes.io/ingress.class: nginx
confluence:
  reverseProxyHost: confluence.{{ .Environment.Name }}.{{ .Environment.Values.helm.domain }}
resources:
  limits:
    # for single core CPU
    cpu: 800m
    memory: 2048Mi
  requests:
    cpu: 0
    memory: 2048Mi
